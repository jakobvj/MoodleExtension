<local:BaseDialogWindow x:Class="MoodleExtension.UI.CodeTagUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoodleExtension.UI"
             mc:Ignorable="d" 
             x:Name="This"
             Width="335" Height="270" Background="#FF3E3E3E" Foreground="White">
    <Grid Width="320">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="18" HorizontalAlignment="Center">Copy to clipboard</TextBlock>
        <GroupBox Header="Copy with &lt;code&gt; tag" Grid.Row="2" Width="300">
            <StackPanel>
                <Button Content="Copy to clipboard" Width="130" Click="Button_Click_1"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Copy with &lt;kbd&gt; tag" Grid.Row="4" Width="300">
            <StackPanel>
                <Button Content="Copy to clipboard" Width="130" Click="Button_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</local:BaseDialogWindow>
